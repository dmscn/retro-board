{
  "name": "retro-board",
  "version": "0.0.1",
  "description": "Retrospective Board Web Application",
  "main": "App.js",
  "scripts": {
    "dev": "webpack-dev-server --open --watch --config config/webpack/dev.js",
    "build": "webpack --config config/webpack/prod.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "pretty-quick --pattern '**/*.*(js|jsx)' --verbose",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "npm run lint:fix",
      "npm run format",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dmscn/retro-board.git"
  },
  "keywords": [
    "retro",
    "scrum",
    "web",
    "react",
    "app",
    "pwa"
  ],
  "author": "Leonardo Damasceno",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dmscn/retro-board/issues"
  },
  "homepage": "https://github.com/dmscn/retro-board#readme",
  "dependencies": {
    "@gympass/yoga": "^1.9.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.2",
    "webpack-merge": "^4.2.2"
  }
}
